  <script type="module">
    document.addEventListener('DOMContentLoaded', function() {
      // Function to animate numbers
      function animateCounter(element, target, duration, suffix) {
        duration = duration || 2000;
        suffix = suffix || '';
        let start = 0;
        const increment = target / (duration / 40); // 16ms per frame (60fps)
        const timer = setInterval(function() {
          start += increment;
          if (start >= target) {
            element.textContent = target + suffix;
            clearInterval(timer);
          } else {
            element.textContent = Math.floor(start) + suffix;
          }
        }, 16);
      }

      // Create intersection observer
      const observerOptions = {
        threshold: 0.5, // Trigger when 50% of element is visible
        rootMargin: '0px 0px -50px 0px' // Start animation a bit before fully visible
      };

      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !entry.target.classList.contains('animated')) {
            const element = entry.target;
            const targetAttr = element.getAttribute('data-target');
            const suffix = element.getAttribute('data-suffix') || '';
            
            if (targetAttr) {
              const target = parseInt(targetAttr);
              
              // Mark as animated to prevent re-animation
              element.classList.add('animated');
              
              // Start animation
              animateCounter(element, target, 2000, suffix);
              
              // Stop observing this element
              observer.unobserve(element);
            }
          }
        });
      }, observerOptions);

      // Observe all counter elements
      const counters = document.querySelectorAll('.counter-number');
      counters.forEach(function(counter) {
        observer.observe(counter);
      });
    });
  </script>
   
  
 
  
  

